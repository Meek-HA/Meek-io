# xxxxxx = replace by subdomain

#Parsing Incoming traffic on port 80 and revert to SSL port 443
server {
    listen 80;
    if ($host = xxxxxx.meek-io.com) {
        return 301 https://$host$request_uri;}
}


#Port443 SSL Letsenrypt
server {
  listen       443 ssl http2;
  server_name xxxxxx.meek-io.com;
  ssl_certificate /etc/letsencrypt/live/xxxxxx.meek-io.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/xxxxxx.meek-io.com/privkey.pem;
  include /etc/letsencrypt/options-ssl-nginx.conf;
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
  
  
#Forward root to container
location / {
  proxy_set_header Upgrade $http_upgrade;
  proxy_set_header Connection "upgrade";
  proxy_pass_header Authorization;
  proxy_pass http://xxxxxx:81;
  proxy_set_header Host $host;
  proxy_set_header X-Real-IP $remote_addr;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_set_header X-Real-IP $remote_addr;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_http_version 1.1;
  proxy_set_header Connection "";
  proxy_buffering off;
  client_max_body_size 0;
  proxy_read_timeout 36000s;
  proxy_redirect off;}
}
